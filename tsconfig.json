// tsconfig.json
{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true ,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
